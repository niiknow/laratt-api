{
    "name": "niiknow/laratt-api",
    "description": "Table API",
    "keywords": ["framework", "laravel"],
    "license": "MIT",
    "type": "project",
    "require": {
        "php": "^7.2",
        "darkaonline/l5-swagger": "^5.8",
        "fideloper/proxy": "^4.0",
        "guzzlehttp/guzzle": "^6.3.3",
        "laravel/framework": "5.8.*",
        "laravel/tinker": "^1.0",
        "league/csv": "^9.1",
        "league/flysystem-aws-s3-v3": "^1.0",
        "maatwebsite/excel": "^3.0",
        "rachidlaasri/laravel-installer": "^4.0",
        "zircote/swagger-php": "^3.0",
        "niiknow/laratt": "^1.6.6"
    },
    "require-dev": {
        "beyondcode/laravel-dump-server": "^1.0",
        "barryvdh/laravel-ide-helper": "^2.4",
        "filp/whoops": "^2.0",
        "friendsofphp/php-cs-fixer": "^2.12",
        "fzaninotto/faker": "^1.4",
        "mockery/mockery": "^1.0",
        "nunomaduro/collision": "^3.0",
        "phpunit/phpunit": "^7.5"
    },
    "autoload": {
        "classmap": [
            "database/seeds",
            "database/factories"
        ],
        "psr-4": {
            "Api\\": "api/",
            "App\\": "app/"
        },
        "files": ["api/helpers.php"]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    },
    "scripts": {
        "phpcs": "phpcs",
        "phpcs:fix": "phpcbf -w",
        "app:clear": [
            "rm -rf ./storage/build",
            "mkdir -p ./storage/build",
            "rm -f bootstrap/cache/config.php",
            "php artisan clear-compiled",
            "php artisan cache:clear",
            "php artisan config:clear",
            "php artisan route:clear",
            "php artisan view:clear",
            "composer dump-autoload"
        ],
        "app:package": [
            "composer app:clear",
            "rm -f storage/framework/sessions/*",
            "npm run production",
            "composer update",
            "cp -f ./.init.php ./storage/build/init.php",
            "deployStash=`git stash create`; git archive --worktree-attributes --format=zip -o ./storage/build/dist.zip ${deployStash:-HEAD}",
            "COPYFILE_DISABLE=1 zip -ur ./storage/build/dist.zip ./vendor"
        ],
        "app:production": [
            "composer app:clear",
            "chmod -R 775 bootstrap/",
            "chmod -R 775 storage/",
            "echo 'composer install --no-dev --optimize-autoloader'"
        ],
        "docker:clear": [
            "rm -rf .docker/data/mysql/*",
            "rm -rf .docker/logs/*"
        ],
        "auto-complete:generate": [
            "php artisan ide-helper:meta",
            "php artisan ide-helper:generate",
            "php artisan ide-helper:models --nowrite"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate"
        ],
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover"
        ]
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
